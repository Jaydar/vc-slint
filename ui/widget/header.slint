import { HorizontalBox,VerticalBox  } from "std-widgets.slint";
import { Button } from "../base/fluent/button.slint";
import { AppData } from "../store.slint";

export component Header inherits HorizontalLayout {
    height: 50px;
   
    HorizontalLayout {
        horizontal-stretch:1;
        alignment: start;
        width: 50px;
        VerticalLayout {
            alignment: center;
            Button{
                width: 30px;
                height: 30px;
                // border-radius: 5px;
                icon: @image-url("../assets/svg/menu.svg") ;
                text: "";
            }
        }
